<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvPregunta"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@+id/cvTopBar"        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        app:cardCornerRadius="18dp"
        android:elevation="18dp">

        <TextView
            android:id="@+id/tvPregunta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Pregunta de prueba"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textAlignment="center"
            android:gravity="center"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/lyHerramientas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/cvPregunta">

        <ImageButton
            android:id="@+id/btnAuxiliar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/bombilla"
            android:scaleType="centerCrop"
            android:layout_marginHorizontal="10dp"/>

        <ImageButton
            android:id="@+id/btnImagen"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/imagen"
            android:scaleType="centerCrop"/>


    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/lyHerramientas"
        android:layout_margin="@dimen/cardItemsMargin"
        android:hint="@string/la_respuesta"
        app:boxBackgroundColor="#FFFFFFFF">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRespuesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:padding="14dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAceptar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDesconocida"
        android:background="@color/secundary"
        android:textColor="@color/white"
        android:text="Aceptar"
        android:padding="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDesconocida"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnAceptar"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/secundary"
        android:textColor="@color/white"
        android:text="Sin respuesta"
        android:textSize="13sp"
        android:padding="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginVertical="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>