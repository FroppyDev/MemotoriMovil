<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="300dp"
    app:cardBackgroundColor="@color/primary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvConcepto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Titulo"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/tilConcepto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/white"
            android:maxLength="30"
            app:layout_constraintTop_toBottomOf="@+id/tvConcepto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tilConcepto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Descripcion (opcional)"
            android:gravity="center"
            android:textSize="22sp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/tilDescripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:singleLine="true"
            android:maxLength="150"/>

        <TextView
            android:id="@+id/tvCategoryText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/cvMarcador"
            app:layout_constraintBottom_toTopOf="@id/cvMarcador"
            app:layout_constraintTop_toBottomOf="@+id/tilDescripcion"
            android:textSize="12dp"
            android:layout_marginVertical="5dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="Marcador/Imagen"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/cvMarcador"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/tvCategoryText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="5dp"
            android:elevation="18dp"
            android:layout_marginStart="10dp"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/ivImageCategory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/secundary"/>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/lyCategoria"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cvMarcador"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnM1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/bg2"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnM2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:background="@color/bg3"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnM3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="5dp"
                android:background="@color/bg4"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnM4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:background="@color/bg7"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnM5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/bg6"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvButton"
            android:layout_width="50dp"
            android:layout_marginVertical="10dp"
            android:layout_height="49dp"
            app:layout_constraintEnd_toStartOf="@+id/btnMake"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lyCategoria"
            app:cardCornerRadius="5dp"
            android:elevation="18dp"
            android:layout_marginStart="10dp">

            <ImageButton
                android:id="@+id/ibImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg7"
                app:tint="@color/white"
                android:src="@drawable/camera_ic"/>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMake"
            android:layout_width="0dp"
            android:layout_height="61dp"
            android:text="Crear"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/lyCategoria"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cvButton"
            android:backgroundTint="@color/bg7"
            android:layout_marginEnd="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>